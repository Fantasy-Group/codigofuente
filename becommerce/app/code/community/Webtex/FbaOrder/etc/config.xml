<config>
    <modules>
        <Webtex_FbaOrder>
            <version>1.0.3</version>
        </Webtex_FbaOrder>
    </modules>
    <global>
        <models>
            <wford>
                <class>Webtex_FbaOrder_Model</class>
                <resourceModel>wford_resource</resourceModel>
            </wford>
            <wford_resource>
                <class>Webtex_FbaOrder_Model_Resource</class>
                <entities>
                    <autosend_rule>
                        <table>fba_autosend_rule</table>
                    </autosend_rule>
                    <fulfillment_order>
                        <table>fba_fulfillment_order</table>
                    </fulfillment_order>
                </entities>
            </wford_resource>
        </models>
        <resources>
            <wford_setup>
                <setup>
                    <module>Webtex_FbaOrder</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
            </wford_setup>
        </resources>
        <blocks>
            <wford>
                <class>Webtex_FbaOrder_Block</class>
            </wford>
        </blocks>
        <helpers>
            <wford>
                <class>Webtex_FbaOrder_Helper</class>
            </wford>
        </helpers>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <wford before="Mage_Adminhtml">Webtex_FbaOrder</wford>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <wford>
                    <file>webtex/fbaOrder.xml</file>
                </wford>
            </updates>
        </layout>
    </adminhtml>
    <phpunit>
        <suite>
            <modules>
                <Webtex_FbaOrder/>
            </modules>
        </suite>
    </phpunit>
</config>
