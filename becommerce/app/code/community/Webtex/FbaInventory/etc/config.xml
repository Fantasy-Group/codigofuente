<config>
    <modules>
        <Webtex_FbaInventory>
            <version>1.0.3</version>
        </Webtex_FbaInventory>
    </modules>
    <global>
        <models>
            <wfinv>
                <class>Webtex_FbaInventory_Model</class>
                <resourceModel>wfinv_resource</resourceModel>
            </wfinv>
            <wfinv_resource>
                <class>Webtex_FbaInventory_Model_Resource</class>
                <entities>
                    <link>
                        <table>fba_inventory_link</table>
                    </link>
                    <stock>
                        <table>fba_inventory_stock</table>
                    </stock>
                    <sync>
                        <table>fba_inventory_sync</table>
                    </sync>
                </entities>
            </wfinv_resource>
        </models>
        <resources>
            <wfinv_setup>
                <setup>
                    <module>Webtex_FbaInventory</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
            </wfinv_setup>
        </resources>
        <blocks>
            <wfinv>
                <class>Webtex_FbaInventory_Block</class>
            </wfinv>
        </blocks>
        <helpers>
            <wfinv>
                <class>Webtex_FbaInventory_Helper</class>
            </wfinv>
        </helpers>
        <events>
            <webtex_queue_processing_finished>
                <observers>
                    <wfinv>
                        <class>wfinv/observer</class>
                        <method>queueFinish</method>
                    </wfinv>
                </observers>
            </webtex_queue_processing_finished>
        </events>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <wfinv>
                    <file>webtex/fbaInventory.xml</file>
                </wfinv>
            </updates>
        </layout>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <wfinv before="Mage_Adminhtml">Webtex_FbaInventory</wfinv>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <phpunit>
        <suite>
            <modules>
                <Webtex_FbaInventory/>
            </modules>
        </suite>
    </phpunit>
</config>
